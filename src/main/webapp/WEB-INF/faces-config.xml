<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>com.synisys.go.dom.User</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userController</managed-bean-name>
        <managed-bean-class>com.synisys.go.controler.UserController</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>locationDAO</managed-bean-name>
        <managed-bean-class>com.synisys.go.controler.LocationDAO</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>

    </managed-bean>

<managed-bean>
    <managed-bean-name>userSearch</managed-bean-name>
    <managed-bean-class>com.synisys.go.controler.UserSearch</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    <managed-property>
        <property-name>userController</property-name>
        <value>#{userController}</value>
    </managed-property>
</managed-bean>

    <converter>
        <converter-for-class>com.synisys.go.dom.Location</converter-for-class>
        <converter-id>locationConvert</converter-id>
        <converter-class>com.synisys.go.controler.LocationConverter</converter-class>
    </converter>


