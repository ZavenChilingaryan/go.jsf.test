<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>com.synisys.go.dom.User</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>team</managed-bean-name>
        <managed-bean-class>com.synisys.go.dao.Team</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userController</managed-bean-name>
        <managed-bean-class>com.synisys.go.controler.UserController</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>teamField</property-name>
            <value>#{team}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean eager="true">
        <managed-bean-name>itemsHolder</managed-bean-name>
        <managed-bean-class>com.synisys.go.controler.ItemsHolder</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>teamMemberFilterController</managed-bean-name>
        <managed-bean-class>com.synisys.go.controler.TeamMemberFilterController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>team</property-name>
            <value>#{team}</value>
        </managed-property>
    </managed-bean>

    <converter>
        <!--<converter-id>LocationConverter</converter-id>-->
        <converter-for-class>com.synisys.go.dom.Location</converter-for-class>
        <converter-class>com.synisys.go.converter.LocationConverter</converter-class>
    </converter>

